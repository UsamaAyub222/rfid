                                <input type="text" name="ServerIP" id="ServerIP" class="form-control" placeholder="ServerIP">
                                <span class="error error_ServerIP"></span>
                            </div> 
                            <div class="form-group col-md-6">
                                <label for="SecureIP">Inovent IP Protocol *</label>
                                <select class="form-control selectpicker" 
                                name="SecureIP" 
                                id="SecureIP" data-live-search="true">
                                    <option value="HTTP">HTTP</option>
